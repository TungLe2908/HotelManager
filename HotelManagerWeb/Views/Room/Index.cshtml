@{
    ViewBag.Title = "Room management";
}

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        text-align: left;
        padding: 0 15px;
        height:48px !important;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    th {
        font-weight: bold;
    }

    .xbutton {
        padding: 5px;
        cursor: pointer;
        color: rgb(63,81,181);
        margin: 11px 0;
    }

        .xbutton:hover {
            background-color: rgba(1,1,1,0.1);
        }
</style>
<div ng-controller="RoomCtrl" layout="column">
    <div layout="row">
        <md-button class="md-primary" ng-click="Add()">+ Add room</md-button>
    </div>
    <table ng-show="ListRoom.length>0">
        <tr>
            <th>
                No.
            </th>
            <th>
                Name
            </th>
            <th>
                Type
            </th>
        </tr>
        <tr ng-repeat="Room in ListRoom">
            <td>
                {{$index+1}}
            </td>
            <td>
                {{Room.RoomID}}
            </td>
            <td>
                <md-select ng-model="Room.RoomTypeID" style="margin:0;" ng-change="Change(Room)">
                    <md-option ng-repeat="Type in ListType" value="{{Type.RoomTypeID}}">
                        {{Type.RoomTypeName}}
                    </md-option>
                </md-select>
            </td>
            <td layout="row">
                <div class="xbutton" ng-click="Delete(Room.RoomID)">
                    Delete
                </div>
            </td>
        </tr>
    </table>
</div>
@section Script
{
    <script src="~/Script/RoomCtrl.js"></script>
}