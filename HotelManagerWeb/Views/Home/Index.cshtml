@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/angular_material/1.0.0/angular-material.min.css">
    <title>@ViewBag.Title</title>
</head>
<body ng-app="Hotel">
    <style>
        .background {
            background: url('../../Image/Wallpaper.jpg') no-repeat center center fixed;
            background-size: cover;
            width: 100%;
            height: 100%;
        }

        td{
            padding:5px;
        }

        .title {
            font-size: 80px;
            margin-bottom: -25px;
        }

        .subtitle {
            font-size: 20px;
        }

        .center {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .topright {
            position: absolute;
            top: 10px;
            right: 10px;
        }
        .botright {
            position: absolute;
            bottom: 10px;
            right: 10px;
        }

        .logo {
            color: white;
            background-color: rgba(0,0,0,0.5);
            width: 100%;
        }
    </style>

    <div class="background" ng-controller="HomeCtrl">

        <div class="center logo">
            <p class="title">
                Aloraha
            </p>
            <p class="subtitle">
                The best hotel of the world
            </p>

        </div>
        <div layout="row" class="topright">
            <md-button class="md-raised md-warn" ng-click="login()">Login</md-button>
            <md-button class="md-raised md-primary" ng-click="facebooklogin()">Facebook login</md-button>
        </div>

        <div class="botright" style="background-color: rgba(0,0,0,0.5);color:white;">
            <md-button class="md-warn" ng-click="showweather=!showweather">Weather Today</md-button>
            <table ng-show="showweather">
                <tr ng-repeat="weather in Weather">
                    <td>{{weather.Name}}</td>
                    <td>{{weather.Status}}</td>
                    <td>{{weather.Min +'&deg;-'+ weather.Max+'&deg;C'}}</td>
                </tr>
            </table>
        </div>

    </div>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-animate.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-aria.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-messages.min.js"></script>

    <!-- Angular Material Library -->
    <script src="http://ajax.googleapis.com/ajax/libs/angular_material/1.0.0/angular-material.min.js"></script>
    <script type="text/javascript" src="~/Script/App.js"></script>
    <script src="~/Script/HomeCtrl.js"></script>
</body>
</html>
